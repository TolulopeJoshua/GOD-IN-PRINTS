<% layout('layouts/boilerplate')%>

<div id="menu" class="col-md-3 menu d-md-block scroll">
    <a class="h5" href="/growth">Section</a>
    <ol>
        <% let id = "" %> 
        <% for (let key in growthHabits) { %>
            <li>
                <a href="/growth#<%= id %> "><%= key.replaceAll('_', ' ') %> </a>
            </li>
            <% id = key %> 
        <% }; %> 
    </ol>
</div>

<div class="d-md-none mb-2" id="menuToggler">
    <button class="d-none" id="fastDownButton">⏬</button>
    <button id="fastUpButton">⏫</button>
</div>
<script src="/javascripts/toggleMenu.js"></script>

<div class="col-md-9 col-lg-6 offset-md-3 overflow-auto">
    <ul class="p-0 m-0">
    <% for (let key in growthHabits) { %>
        <li>
            <h3 class="habit-title p-2"><%= key.replaceAll('_', ' ') %> </h3>
            <% for (let habit of growthHabits[key]) { %> 
                <ul class="p-1">
                    <li id="<%= key %>" class="m-3 justify"><img src="https://freesvg.org/img/1551445551.png" height="13" class="me-2" alt="*"><small><b><%= habit %>.</b></small></li>
                </ul>
            <% } %> 
        </li>
    <% }; %> 
    </ul>
</div>

    
<div class="d-none d-lg-block col-lg-5 offset-lg-8 py-5 text-center position-fixed mh-100 scroll">    

    <p class="text-muted small">        
        <strong>Check this out 👇</strong>
    </p>

    <% if (adBook[0]) { %> 
    <a href="/books/<%=adBook[0]._id%>" class="">
    <img class='mx-2 my-2 image-size opacity-75 fade-animate' width="60%" src= <%= 'https://godinprintsdocuments.s3.amazonaws.com/' + adBook[0].image.key.replaceAll(" ", "+") %> alt="<%= adBook[0].title %>"> 
    </a>
    <% } %> 

</div>


