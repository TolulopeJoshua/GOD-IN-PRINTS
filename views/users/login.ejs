<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <!-- <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4"> -->
            <div style="max-width: 25em;" class="card shadow p-0">
                <img src="assets/images/library3.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Email</label>
                            <input class="form-control" type="email" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <button class="btn btn-success btn-block me-auto">Login</button>
                            <a class="small" href="/register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        <!-- </div> -->
    </div>
</div>

