<% layout('layouts/boilerplate') %> 
<div class="row my-5">
    <h3 class="text-center">Password Reset</h1>
    <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 px-5">
        <form action="/changePassword" method="POST" novalidate class="validated-form">
            <div class="my-3">
                <label class="form-label" for="image">Enter your email:</label>
                <input class="form-control" type="email" id="email" name="email" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="my-5 text-center">                
                <button class="btn btn-success">Reset Password</button>
            </div>
            <div class="my-5 text-center">           
                <small><%= msg %> </small>
            </div>
        </form>
    </div>
</div>