        <div class="toast-body bg-dark text-light text-center rounded-2">
            Toast
        </div>
        <script>
            let toastTimeout;
            const defaultToast = document.querySelector('.toast.default');
            const toast = new bootstrap.Toast(defaultToast)
            function toaster(msg, timeout = 2000) {
              defaultToast.classList.remove('d-none');
              defaultToast.querySelector('.toast-body').innerText = msg;
              toast.show();
              toastTimeout && clearTimeout(toastTimeout);
              toastTimeout = setTimeout(() => {
                defaultToast.classList.add('d-none');
              }, timeout);
            }
        </script>
  
