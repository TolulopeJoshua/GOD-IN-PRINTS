<div class="row ">
    <div class="col-md-9 col-lg-6 offset-md-3">
        <div style="min-height: 325px;" class="row advert">
          <% if (featureMovie !== null) { %>
            <div class="footer-item col-10 col-md-5 offset-0 offset-md-0 ms-auto me-auto">
              <article class="mb-2 rounded-3 overflow-hidden bg-dark text-light border d-flex flex-column">
                <div class="position-relative">          
                    <a href="/media/movies/<%= featureMovie.id %>/<%= featureMovie.snippet.title.replace(/ /g, '_') %>">  
                        <img class="w-100 ratio-16x9" src="<%= featureMovie.snippet.thumbnails.medium.url %>" alt="<%= featureMovie.snippet.title %>">
                        <span class="play position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center h1 bg-secondary text-light"><i class="bi bi-play-fill"></i></span>
                    </a>
                    <ol style="z-index: 1000000;" class="optionsList d-none bg-white text-dark position-absolute top-100 end-0 border rounded-3 p-1 m-3">
                        <li id="<%= featureMovie.id %>" class="p-2 later"><i class="bi bi-clock pe-2"></i><small>Save to Watch Later</small></li>
                    </ol>
                </div>
                <a class="p-2 pt-3" href="/media/movies/<%= featureMovie.id %>/<%= featureMovie.snippet.title %>">
                    <span>
                        <p class="text-light small m-0 p-0"><%= featureMovie.snippet.title.split(" | ")[0] %> </p>
                        <span class="text-muted small">
                          <%= (featureMovie.duration.hours ? featureMovie.duration.hours + ":" : "") + featureMovie.duration.minutes + ":" + featureMovie.duration.seconds %>
                          <!-- <i class="bi bi-dot h5"></i>
                          <%= featureMovie.views %> views
                          <i class="bi bi-dot h5"></i>
                          <%= featureMovie.published %> -->
                        </span>
                    </span>
                </a>
              </article>
