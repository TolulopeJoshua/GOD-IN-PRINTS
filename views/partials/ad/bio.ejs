<a href="/biographies/<%= adBio[0]._id %>">
    <div class="card text-dark shadow p-4 text-center">
        <h5 class="text-decoration-underline"><%= adBio[0].name %> </h5>
        <p class="small justify lh-lg p-0 m-0" id=<%= adBio[0]._id %>>
            <% if (adBio[0].image.key === 'none') { %> 
                <img style="max-width: 8em;" class='card-img-top float-end p-2' src="/assets/images/<%= adBio[0].gender %>.png" alt="" class="card-img-top"> <p></p>
            <% } else { %> 
                <img style="max-width: 8em;" class='card-img-top float-end p-2' class='card-img-top float-end' src=<%= 'https://godinprintsdocuments.s3.amazonaws.com/' + adBio[0].image.key.replaceAll(" ", "+") %> alt="">
            <% } %> 
        </p>
        <canvas id="canvas" class="w-100 h-100 position-absolute start-0 top-0 canvas"></canvas>
    </div>
</a>
                
<script>
    route = `/biographies/<%= adBio[0]._id %>/story?q=250`;
    xhttp = new XMLHttpRequest();
    xhttp.onload = function() {
        document.getElementById('<%= adBio[0]._id %>').innerHTML += this.responseText;
    }
    xhttp.open("GET", route, true);
    xhttp.send();
</script>

