    <div id="loginCard" style="transform: translateY(-200vh); transition: ease all 2s; box-shadow: 0px 0px 30px #aaa; width: 300px;" class="card position-fixed px-2 m-0 mt-3">
        <div class="">
            <h5 class="card-title text-center m-2">Continue with</h5>
            <a href="/login/ggl" class="d-block btn pb-2 ps-4 pe-4 mb-2 border-warning text-primary"><i class="bi bi-google pe-2"></i><i>Google</i></a>
            <a href="/login/fbk" class="d-block btn pb-2 ps-3 pe-3 btn-primary"><i class="bi bi-facebook pe-2"></i><i>Facebook</i></a><hr class="my-2">
        </div>
        <div class="d-flex justify-content-between pb-2 gap-2">
