<div class="col-md-9 col-lg-6 offset-md-3 position-relative">
    <h3 class="text-center m-3"><%= category %> </h3>
    <% const len = biographies.length < 10 ? biographies.length : 10; %> 
    <script> let route; let xhttp; const idLength = {}; </script>
    <% for (i = 0; i < len; i++) { %> 
        <div class="card rounded-pill mb-3">
            <div class="row">
                <% if (biographies[i]) { %> 
                <div class="col-4 col-lg-3 d-flex align-content-center">
                    <% if (biographies[i].image.key === 'none') { %> 
                        <img class="card-img-top rounded-circle img-thumbnail m-3" src="/assets/images/<%= biographies[i].gender %>.png" alt="" > <p></p>
                    <% } else { %> 
                        <img class='card-img-top rounded-circle img-thumbnail m-3' src=<%= 'https://godinprintsdocuments.s3.amazonaws.com/' + biographies[i].image.key.replaceAll(" ", "+") %> alt="">
                        <% } %> 
                </div>
                <div class="col-8 p-4">
                    <a class="stretched-link text-decoration-none" href="/biographies/<%= biographies[i]._id %> "><h5 class="card-title"><%= biographies[i].name %>&nbsp;&nbsp;<span class="fs-6 fst-italic text-dark">(<%= biographies[i].role %>)</span></h5></a>
                    <p class="text-muted"> (<%= biographies[i].birthYear %> - <%= biographies[i].deathYear %>)  </p>
                    <small id="<%= biographies[i]._id %>" class="card-text"><span class="text-muted">Loading text...</span></small><br>

                    <script>idLength['<%= (biographies[i]._id) %>'] = 120;</script>
                </div>
                <% } %> 
            </div>
        </div>
    <% } %> 

    <%- include('../partials/paginate') %> <hr>

