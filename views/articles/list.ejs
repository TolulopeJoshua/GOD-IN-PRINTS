<div class="col-md-9 col-lg-6 offset-md-3 position-relative">
    <div class="position-relative">
        <h1 class="h3 text-center p-4 mb-3 bg-secondary bg-gradient text-light rounded-3"><%= category %> </h1>
        <%- include('../partials/loginModal') %>
    </div>
    <hr class="mb-4">

    <% if (!articles.length) { %>
     <div style="height: 50vh; width: 80%; margin-left: 10%;" class="border border-2 rounded-3 mt-5 text-secondary d-flex justify-content-center align-items-center">
        <i class="fa fa-exclamation-triangle pe-2" aria-hidden="true"></i>There are no items to display
    </div>
    <% } else { %>
    <ul style="min-height: 50vh;" class="m-0 px-3 mb-3">
        <% for (let article of articles) { %> 
        <li class="my-5">
            <div class="card article-list p-4 shadow">
                <a class="streched-link h5 py-2 text-capitalize" href="/articles/2/<%= article.uid %>"><%= article.name %> </a>
                <small id=<%= article._id %> class='text-truncate'><span class="text-muted"><%= article.text.replace(/<[^>]*>/g, " ").substring(0, 120) %>...</span></small>
                
            </div>
        </li>
        <% } %> 
    </ul>
    <% } %> 

